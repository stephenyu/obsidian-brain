{
  "package": {
    "productName": "obra",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "dist",
    "devPath": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": false,
      "identifier": "com.obra.daemon",
      "icon": ["icons/icon.png"],
      "macOS": {
        "frameworks": [],
        "signingIdentity": null
      }
    },
    "systemTray": {
      "iconPath": "icons/tray-idle.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "obra",
        "width": 800,
        "visible": false
      }
    ]
  }
}
